<%- include("header") -%>

    <div class="box" id="heading">
        <h1>Date : <%= listTitle %> </h1>
    </div>
    <div class="box">
        <% for(let i = 0; i < newListItems.length; i++){ %>
        <div class="item">
            <input type="checkbox">
            <p> <%= newListItems[i] %> </p>
        </div>
        <% } %>
        <form class="item" action="/" method="post">
            <input type="text" placeholder="New Item" name="newItem" autofocus autocomplete="off">
            <button type="submit" class="btn" name="list" value = "<%= listTitle %>" >+</button>
        </form>
    </div>

<%- include("footer") -%>